<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".login_lupa_pw">

    <ImageView
        android:id="@+id/logo_ganti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_removebg_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/buletan"
        android:layout_width="142dp"
        android:layout_height="138dp"
        android:alpha="0.5"
        android:src="@drawable/bg_bulet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_ganti"
        app:layout_constraintVertical_bias="0.016" />

    <ImageView
        android:id="@+id/gambar_lock"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:src="@drawable/lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo_ganti" />


    <TextView
        android:id="@+id/lupa_pw_ya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUPA SANDI?"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buletan"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/masukin_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan email untuk merubah kata sandi :"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bg_lupa_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/logo_ganti"
        app:layout_constraintTop_toTopOf="@+id/logo_ganti"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/bg_lupa_pw"
        android:layout_width="303dp"
        android:layout_height="42dp"
        android:layout_marginBottom="128dp"
        android:src="@drawable/edit_text_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buletan"
        app:layout_constraintVertical_bias="0.776" />

    <ImageView
        android:id="@+id/lambang_akun_lupa"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:alpha="0.5"
        android:src="@drawable/lambang_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768" />

    <EditText
        android:id="@+id/uname_lupa_pw"
        android:layout_width="219dp"
        android:layout_height="38dp"
        android:layout_marginBottom="156dp"
        android:hint="Email"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lanjut"
        android:layout_width="244dp"
        android:layout_height="63dp"
        android:backgroundTint="#102543"
        android:text="LANJUTKAN"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_lupa_pw"
        app:layout_constraintVertical_bias="0.161" />

</androidx.constraintlayout.widget.ConstraintLayout>
